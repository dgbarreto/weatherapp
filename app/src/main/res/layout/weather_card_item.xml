<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14/05/2022"
                android:textSize="40sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/tvLabelDate"
                android:paddingBottom="22dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Média"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelDate"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/tvLabelAvgTemp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTempAvg"
                android:text="8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelAvgTemp"
                android:textSize="56dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mínima"
                app:layout_constraintStart_toEndOf="@+id/tvTempAvg"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelDate"
                android:layout_marginLeft="28dp"
                android:id="@+id/tvLabelTempMin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:layout_marginLeft="28dp"
                app:layout_constraintStart_toEndOf="@+id/tvTempAvg"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelTempMin"
                android:id="@+id/tvTempMin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Máxima"
                android:layout_marginLeft="28dp"
                app:layout_constraintStart_toEndOf="@+id/tvTempAvg"
                app:layout_constraintTop_toBottomOf="@+id/tvTempMin"
                android:id="@+id/tvLabelTempMax" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:layout_marginLeft="28dp"
                app:layout_constraintStart_toEndOf="@+id/tvTempAvg"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelTempMax"
                android:id="@+id/tvTempMax"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>